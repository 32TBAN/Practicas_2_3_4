<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Practica_2">

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:layout_margin="8dp"
        android:padding="@dimen/textview_padding"
        app:barrierMargin="8dp"
        app:columnCount="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="VisualLintBounds">

        <EditText
            android:id="@+id/amountEditText"
            android:layout_width="384dp"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:digits="0123456789"
            android:ems="10"
            android:hint="@string/text_view_amount"
            android:inputType="number"
            android:maxLength="6"
            android:minHeight="48dp"
            app:layout_column="0"
            app:layout_columnSpan="2"
            tools:ignore="DuplicateSpeakableTextCheck,VisualLintOverlap" />


        <TextView
            android:id="@+id/textView_amount"
            android:layout_width="143dp"
            android:layout_height="48dp"
            android:background="#BBDEFB"
            android:elevation="@dimen/elevation"
            android:hint="@string/text_view_amount"
            android:padding="@dimen/textview_padding"
            android:paddingLeft="12dp"
            android:paddingTop="12dp"
            android:paddingRight="12dp"
            android:paddingBottom="12dp"
            android:textColorHint="#455A64"
            app:layout_column="0"
            app:layout_columnSpan="2"
            app:layout_gravity="fill_horizontal"
            app:layout_row="0"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/totalLabelView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/textview_padding"
            android:text="@string/total"
            android:textColorHint="#8D6E63"
            app:layout_column="0"
            app:layout_gravity="right"
            app:layout_row="3" />

        <TextView
            android:id="@+id/percentTextView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/textview_padding"
            android:text="@string/tip"
            android:textColorHint="#8D6E63"
            app:layout_column="0"
            app:layout_gravity="center_vertical|right"
            app:layout_row="2" />

        <TextView
            android:id="@+id/percentTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/textview_padding"
            android:text="@string/tip_percentage"
            android:textColorHint="#8D6E63"
            app:layout_column="0"
            app:layout_gravity="center_vertical|right"
            app:layout_row="1" />

        <TextView
            android:id="@+id/tipLabelTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/result_background"
            android:elevation="@dimen/elevation"
            android:gravity="center"
            android:padding="10dp"
            android:textColorHint="#795548"
            app:layout_column="1"
            app:layout_gravity="fill_horizontal"
            app:layout_row="2" />

        <TextView
            android:id="@+id/totalTextView"
            android:layout_width="257dp"
            android:layout_height="wrap_content"
            android:background="@color/result_background"
            android:elevation="@dimen/elevation"
            android:gravity="center"
            android:padding="10dp"
            android:textColorHint="#795548"
            app:layout_column="1"
            app:layout_gravity="fill_horizontal"
            app:layout_row="3" />

        <SeekBar
            android:id="@+id/seekBar"
            style="@android:style/Widget.DeviceDefault.Light.SeekBar"
            android:layout_width="73dp"
            android:layout_height="40dp"
            android:backgroundTint="#FDB75C"
            android:foregroundTint="#FF9800"
            android:max="30"
            android:progress="15"
            android:progressTint="#FDB75C"
            android:thumbTint="#FF9800"
            app:layout_column="1"
            app:layout_gravity="fill_horizontal"
        app:layout_row="1"/>


    </androidx.gridlayout.widget.GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>